{% extends 'base.html.twig' %}

{% block title %}Repo index{% endblock %}

{% block body %}
    <h1>Repo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>Link</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for repo in repos %}
            <tr>
                <td>{{ repo.id }}</td>
                <td>{{ repo.name }}</td>
                <td>{{ repo.description }}</td>
                <td>{{ repo.image }}</td>
                <td>{{ repo.link }}</td>
                <td>
                    <a href="{{ path('app_repo_show', {'id': repo.id}) }}">show</a>
                    <a href="{{ path('app_repo_edit', {'id': repo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_repo_new') }}">Create new</a>
{% endblock %}
